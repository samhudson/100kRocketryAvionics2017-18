#!/bin/bash

#file
echo
echo "installing apt-file"
echo
sudo apt-get install file
echo
echo "updating apt-file"
echo
sudo apt-file update
#docker
echo
echo "installing docker" 
echo
sudo apt-get install docker.io
#C/C++
echo
echo "installing gcc" 
echo
sudo apt-get install gcc
echo
echo "installing g++" 
echo
sudo apt-get install g++
#Make/CMake
echo
echo "installing make" 
echo
sudo apt-get install make
echo
echo "installing cmake" 
echo
sudo apt-get install g++ cmake
#OpenGL
echo
echo "updating" 
echo
sudo apt-get update
echo
echo "installing mesa-utils" 
echo
sudo apt-get install mesa-utils
echo
echo "installing mesa-common-dev"
echo
sudo apt install mesa-common-dev
echo
echo "installing freeglut"
echo
sudo apt-get install freeglut3 
sudo apt-get install freeglut3-dev
sudo apt install libglu1-mesa-dev freeglut3-dev
echo
echo "copying libglut.so to /usr/lib64"
echo
sudo mkdir /usr/lib64
sudo cp ./3d_trace/libglut.so /usr/lib64/
sudo chmod o=rwx /usr/lib64/libglut.so
sudo chmod u=rwx /usr/lib64/libglut.so
echo
echo "installing binutils-gold"
echo
sudo apt-get install binutils-gold 
echo
echo "installing libglew"
echo
sudo apt-get install libglew-dev
echo
echo "installing build-esssential"
echo
sudo apt-get install build-essential
echo
echo "installing libglew 1.5 dev"
echo
sudo apt-get install libglew1.5-dev libglm-dev
#Python, PIP, modules
echo
echo "installing python"
echo
sudo apt-get install python
echo
echo "installing pip" 
echo 
sudo  apt-get install python-pip python-dev build-essential #error
sudo  pip install --upgrade pip 
sudo  pip install --upgrade virtualenv 
echo
echo "installing requests module for python"
echo
sudo pip install requests #error
echo
echo "updating"
echo
#update and upgrade
sudo apt-get update
echo
echo "upgrading"
echo
sudo apt-get upgrade
echo
echo "Done"
echo
